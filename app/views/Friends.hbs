<!DOCTYPE html>
<html>
	<head>
		<!-- Standard Meta -->
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
		<!-- Site Properties -->
		<title>Dashboard</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css">
		<script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.js"></script>
		<style type="text/css">
			body {
			background-image: url("../ASE/pics/Mainbg.jpg");
			background-size: auto 115%;
			overflow: hidden;
			}
			.hidden.menu {
			display: none;
			}
			.ui.container {
			margin-top: 50px;
			<!-- top margin for container -->
			}
		</style>
		<script>
			$(document)
			    .ready(function() {
			
			        // fix menu when passed
			        $('.masthead')
			            .visibility({
			                once: false,
			                onBottomPassed: function() {
			                    $('.fixed.menu').transition('fade in');
			                },
			                onBottomPassedReverse: function() {
			                    $('.fixed.menu').transition('fade out');
			                }
			            });
			
			        // create sidebar and attach to menu open
			        $('.ui.sidebar')
			            .sidebar('attach events', '.toc.item');
			
			    });
			
			$('.ui.labeled.icon.sidebar')
			    .sidebar('toggle');
			
			});
		</script>
	</head>
	<body>
		<div class="ui left demo visible vertical inverted sidebar labeled icon menu">
			<a class="item" href="index.html">
			<i class="home icon"></i> Home
			</a>
			<a class="item" href="projects">
			<i class="block layout icon"></i> Projects
			</a>
			<a class="item" href="ProjectDB">
			<i class="sitemap icon"></i> Dashboard
			</a>
			<a class="item" href="Tasks">
			<i class="file alternate outline icon"></i> Tasks
			</a>
			<a class="active item" href="Friends">
			<i class="white users icon"></i> Friends
			</a>
			<a class="item" href="Chat">
			<i class="rocketchat icon"></i> Chat
			</a>
			<a class="item" href="Notifications">
			<i class="bell outline icon"></i> Notifications
			</a>
			<a class="item">
			<i class="smile icon"></i> Log out
			</a>
		</div>
		<div class="ui container">
		<!--top menu-->
		<h1 class="ui header">Manage Friends</h1>
		<p id="userID" hidden>{{id}}</p>
		<div class="ui green segment">
			<h4>Add Friends</h4>
			<div class="ui search">
				<div class="ui icon input">
					<input class="prompt" type="text" placeholder="Search friends...">
					<i class="users icon"></i>
				</div>
				<div class="results"></div>
				<button class="ui grey disabled right floated basic button" id="newFriendRequestButton">
				<i class="icon user"></i>
				No friend requests
				</button>
			</div>
			<div class="ui right floated segment">
			</div>
			<div class="ui green segment">
				<h4>Your Friends</h4>
				<div class="ui grid" id="friendsGrid">
					<!-- Friend segments go here -->
				</div>
				<!-- For modal (sending friend request) -->
				<div class="ui mini basic modal" id="confirmFriendModal">
					<div class="ui card">
						<div class="image">
							<img src="../images/avatar/bobby1234.jpg" id="imageSRC">
						</div>
						<div class="content">
							<div class="header" id="nameSRC" >Kristy</div>
							<div class="meta">
								<span class="date" id="dateSRC">Joined in 2013</span>
							</div>
						</div>
						<div class="extra content">
							<div class="ui two buttons">
								<div class="ui basic green button" id="addFriend">Add</div>
								<div class="ui basic red button" id="closeModal">Cancel</div>
							</div>
						</div>
					</div>
				</div>
                
				<!-- For modal (friend invite sent) -->
				<div class="ui tiny modal" id="friendInviteSentModal">
					<div class="header">Success!</div>
					<div class="content">
						<p id="modalText">Your friend invite has been sent!</p>
					</div>
					<div class="actions">
						<div class="ui green button" id="closeSentModal">OK</div>
					</div>
				</div>
                
				<!-- For modal (Viewing friend requests) -->
				<div class="ui tiny modal" id="viewFriendInvitesModal">
					<div class="ui segment">
						<div class="header">Your friend invitations!</div>
						<div class="ui middle aligned divided list" id="friendsInviteListDiv">
                            <div class="item">
    <div class="right floated content">
      <div class="ui button">Add</div>
    </div>
    <img class="ui avatar image" src="/images/avatar2/small/lena.png">
    <div class="content">
      Lena
    </div>
  </div>
						</div>
					</div>
				</div>
                
                <!-- For modal (channel created / whatever success) -->
                <div class="ui mini modal" id="successMessageModal">
                    <div class="header">Success!</div>
                    <div class="content">
                        <p id="modalText">Friend invite accepted!!</p>
                    </div>
                    <div class="actions">
                        <div class="ui green button" id="successMessageModalClose">OK</div>
                    </div>
                </div>
                
				<!-- For modal (remove friends) -->
				<div class="ui basic mini modal" id="removeFriend">
					<div class="ui fluid cards">
						<p id="rFriendID" hidden>5566</p>
						<div class="card">
							<div class="image">
								<img src="/images/avatar2/large/matthew.png" id="rImageSRC">
							</div>
							<div class="content">
								<div class="header" id="rHeaderSRC">
									Elliot Fu
								</div>
								<div class="description" id="rDescSRC">
									Do you want to remove XXX from your friends list?
								</div>
							</div>
							<div class="extra content">
								<div class="ui two buttons">
									<div class="ui red button" id="rApproveSRC">Remove</div>
									<div class="ui basic red button" onclick="$('#removeFriend').modal('hide');">Cancel</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
	<script src="./JS/friends.js"></script>
</html>