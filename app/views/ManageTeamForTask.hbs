    Tasks
  </a>
  <a class="item" href="Friends" >
    <i class="white users icon"></i>
    Friends
  </a>
 <a class="item" href="Chat">
    <i class="rocketchat icon"></i>
    Chat
  </a>
  <a class="item" href="Notifications">
    <i class="bell outline icon"></i>
    Notifications
  </a>
  <a class="item">
    <i class="smile icon"></i>
    Log out
  </a>
</div>

<div class="ui container">
<!--top menu-->
<!--Manage Team Page-->
<div class="ui segment">
	<h1>Manage Team</h1>
	<div class="ui two column grid">
		<div class="column"><h2>Simple Solutions</h2></div>
		<div class="two column row">
			<div class="column">
			<h3>Members</h3>
      <div id="memberUIGrid"></div>
			</div>
			<div class="column">
      <h3>Friends</h3>
      <div class="friendUIGrid" id="friendUIGrid"></div>
      </div>
    </div>
		</div>
	 </div>
	<div class="ui fluid teal submit button" onclick="window.history.go(-1); return false;" style="width:100px;">Back</div>

  <!--modal for invite-->
  <div class="ui mini basic modal" modal='hide' id="inviteModal">
    <div class="ui icon header">
      <i class="paper plane outline icon"></i>
      Invite sent!
    </div>
    <div class="content" align="center">
      <p>Your invite has been sent</p>
    </div>
    <div class="actions">
      <div class="ui green ok inverted button">
        <i class="checkmark icon"></i>
        Done!
      </div>
    </div>
  </div>
</div>
</body>
