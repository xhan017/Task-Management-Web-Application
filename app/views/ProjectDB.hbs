<!DOCTYPE html>
<html>
	<head>
		<!-- Standard Meta -->
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
		<!-- Site Properties -->
		<title>Dashboard</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css">
		<script
			src="https://code.jquery.com/jquery-3.1.1.min.js"
			integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
			crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.js"></script>
		<style type="text/css">
			body {
			background-image: url("../ASE/pics/Mainbg.jpg");
			background-size: auto 115%;
			overflow: hidden;
			}
			}
			.ui.container {
			margin-top : 50px;	<!-- top margin for container -->
			
			}

			.row{
		    position: relative;
		  }

		  .tiny.ui.icon.buttons{
		    position: absolute;
		    right:    25px;
				bottom:   -20px;
		  }

			.stretched.column{
				position:   relative;
			}

			.ui.icon.buttons{
				position: absolute;
				right:    25px;
				bottom:   25px;
			}

			.ui.mini.basic.modal {
				position: relative;
			}

			.ui.green.ok.inverted.button {
		    position: absolute;
		    left:     120px;

		  }


		</style>
		<script>
			$(document)
			  .ready(function() {
			    // fix menu when passed
			    $('.masthead')
			      .visibility({
			        once: false,
			        onBottomPassed: function() {
			          $('.fixed.menu').transition('fade in');
			        },
			        onBottomPassedReverse: function() {
			          $('.fixed.menu').transition('fade out');
			        }
			      })
			    ;
			;
			    // create sidebar and attach to menu open
			 $('.ui.sidebar')
			      .sidebar('attach events', '.toc.item')
			    ;

			  })
			;
			$('.ui.labeled.icon.sidebar')
			.sidebar('toggle')
			;

			  })
			;


		</script>
	</head>
	<body style="overflow:auto;">
		<div class="ui left demo visible vertical inverted sidebar labeled icon menu">
			<a class="item" href="index.html">
			<i class="home icon"></i>
			Home
			</a>
			<a class="item" href="Projects">
			<i class="block layout icon"></i>
			Projects
			</a>
			<a class="active item" href="ProjectDB">
			<i class="sitemap icon"></i>
			Dashboard
			</a>
			<a class="item" href="Tasks">
			<i class="file alternate outline icon"></i>
			Tasks
			</a>
			<a class="item" href="Friends" >
			<i class="white users icon"></i>
			Friends
			</a>
			<a class="item" href="Chat">
			<i class="rocketchat icon"></i>
			Chat
			</a>
			<a class="item" href="Notifications">
			<i class="bell outline icon"></i>
			Notifications
			</a>
			<a class="item">
			<i class="smile icon"></i>
			Log out
			</a>
		</div>
		<div class="ui container segment" style="height:auto;">
			<!--top menu-->
			<p id="userID" hidden>{{id}}</p>
			<div class="ui grid">
				<div class="twenty wide stretched column">
				<h3 align="center"><i class="book icon"></i>Project Name</h3>
						<div class="ui fitted divider"></div>
						<br>
				
					<div class="row">
						<div class="stretched column" align="center" id= "projectName">
						</div>
					</div>
					<h3 align="center"><i class="clipboard icon"></i>Summary</h3>
						<div class="ui fitted divider"></div>
						<br>
					
					<div class="row">
						<div class="stretched column" align="center" id="projectSummary">
						</div>
					</div>
					<h3 align="center"><i class="compass icon"></i>Project Scope</h3>
						<div class="ui fitted divider"></div>
						<br>
					
					<div class="row">
						<div class="stretched column" align="center" id="projectScope">
						</div>
					</div>
					<h3 align="center"><i class="address card icon"></i>Team Members</h3>
						<div class="ui fitted divider"></div>
						<br>
					
					<div class="row">
						<div class="stretched column" align="center" id="projectMembers">
						</div>
						<div class="tiny ui icon buttons" id="manageBtn">
							<div class="small ui basic red button icon">
							<i class="edit icon"></i>
							Manage Members
							</div>
						</div>
					</div>
					<h3 align="center"><i class="stopwatch icon"></i>Project Completion</h3>
						<div class="ui fitted divider"></div>
						<br>
					
					<div class="row">
						<div class="stretched column">
							<div class="ui active indicating progress" data-value="" data-total="10" id="progress1">
								<div class="bar"></div>
								<div class="label">Progress</div>
							</div>
							<br>
							<div class="ui icon buttons">
								<div class="decrement ui basic red button icon" onclick="$('#progress1').progress('decrement');" id="progressDec"><i class="minus icon"></i></div>
								<div class="increment ui basic green button icon" onclick="$('#progress1').progress('increment');" id="progressInc"><i class="plus icon"></i></div>
							</div>
							<br>
							
						</div>
					</div>
					<div class="row">
								<div class="stretched column">
								
									<h3 class="ui fitted horizontal divider header">
										<i class="calendar alternate icon"></i>
										Gantt Chart
									</h3>
									<center><img src="../ASE/pics/gantt_chart.jpeg" align="center"alt="Gantt Chart"></center>
									<br>
									<br>
								<div class="tiny ui icon buttons" id="uploadBtn">
							<div class="small ui basic red button icon">
							<i class="edit icon"></i>
							Upload
							</div>
							
						</div>
							</div>
				</div>
			</div>
	</div>
<br> 
<br>
		<div class="ui container">
		  <!--top menu-->
		  <h1 align="center">Tasks</h1>
		  <div class="ui basic segments">
		    <div class="ui red segment">
		      <div class="ui grid" id="taskUIGrid">
		        <!-- The cards go here-->
		      </div>
		    </div>
		  </div>
		        <!-- MODAL -->
		        <div class="ui modal" modal='hide' id="createTaskModal">
		          <div class="ui raised segment">
		            <div class="ui container segment" style="height:450px; ">
		              <!--top menu-->
		              <div class="ui">
		                <form class="ui form" id="createTaskForm">
		                  <div class="field">
		                    <h3>Task Title</h3>
		                    <input type="text" name="task-title" id="taskText" placeholder="Enter your task title">
		                  </div>
		                  <div class="field">
		                    <h3>Task Description</h3>
		                    <textarea rows="2" name="proj-sum" id="taskDesText" placeholder="Enter your task description"></textarea>
		                  </div>
		                  <div class="field">
		                    <h3>Task Start Date</h3>
		                    <div class="ui calendar" id="example1">
		                      <div class="ui input left icon">
		                        <i class="calendar icon"></i>
		                        <input type="date" placeholder="Date/Time" name="start-date" id="taskStartDate">
		                      </div>
		                    </div>
		                  </div>
		                  <div class="field">
		                    <h3>Task End Date</h3>
		                    <div class="ui calendar" id="example1">
		                      <div class="ui input left icon">
		                        <i class="calendar icon"></i>
		                        <input type="date" placeholder="Date/Time" name="end-date" id="taskEndDate">
		                      </div>
		                    </div>
		                  </div>
		                  <div class="ui right floated positive right labeled icon button" id="submitTaskBtn">
		                    Create
		                    <i class="checkmark icon"></i>
		                  </div>
		                  <button class="ui right floated button" type="cancel">Cancel</button>
		                </form>
		              </div>
		            </div>
		          </div>
		        </div>
		        <!-- Modal 2-->
		        <div class="ui mini basic modal" modal='hide' id="createdTaskModal">
		          <div class="ui icon header">
		            <i class="thumbs up icon"></i>
		            Task created!
		          </div>
		          <div class="content" align="center">
		            <p align="center">Your task has been created</p>
		          </div>
		          <div class="actions">
		            <div class="ui green ok inverted button">
		              <i class="checkmark icon"></i>
		              Done!
		            </div>
		          </div>
		        </div>
						<!-- Create Button-->
						<div class="ui basic segment">
							<div class="ui card">
								<div class="content">
									<a class="header" href="#">Create new task</a>
									<p>Please click on the create button to create new task</p>
								</div>
								<div class="extra content" style="text-align:center">
									<a class="positive ui right labeled icon button" id="createTask">
									<i class="right arrow icon"></i>
									Create
									</a>
								</div>
							</div>
						</div>
		</div>
	</body>
<script src="./JS/enterProj.js"></script>
</html>
